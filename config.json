{
  "name": "5_restart_larger_bs",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000
  },
  "arch": {
    "type": "SpexPlusModel",
    "args": {
      "tcn_block_params": {
        "num_blocks": 8,
        "in_channels": 256,
        "conv_channels": 512,
        "kernel_size": 3
      },
      "res_block_out": 512,
      "speaker_dim": 256,
      "num_speakers": 250,
      "enc_dim": 256,
      "L1": 20,
      "L2": 80,
      "L3": 160
    }
  },
  "data": {
    "train": {
      "batch_size": 5,
      "num_workers": 5,
      "dataset": {
        "type": "MixedDataset",
        "args": {
          "underlying": {
            "type": "LibrispeechDataset",
            "args": {
              "data_dir": "/home/jupyter/mnt/datasets/LibriSpeech/LibriSpeech",
              "part": "train-clean-360",
              "max_audio_length": 20.0,
              "max_text_length": 200
            },
            "module": "ss.datasets"
          },
          "max_length": 12000,
          "max_speakers": 250,
          "reuse": true
        }
      }
    },
    "val": {
      "batch_size": 5,
      "num_workers": 5,
      "dataset": {
        "type": "MixedDataset",
        "args": {
          "underlying": {
            "type": "LibrispeechDataset",
            "args": {
              "data_dir": "/home/jupyter/mnt/datasets/LibriSpeech/LibriSpeech",
              "part": "dev-clean",
              "max_audio_length": 20.0,
              "max_text_length": 200
            },
            "module": "ss.datasets"
          },
          "snr_levels": 0,
          "max_length": 500,
          "max_speakers": 10,
          "test": true,
          "reuse": true,
          "limit": 150
        }
      }
    },
    "test": {
      "batch_size": 5,
      "num_workers": 5,
      "dataset": {
        "type": "MixedDataset",
        "args": {
          "underlying": {
            "type": "LibrispeechDataset",
            "args": {
              "data_dir": "/home/jupyter/mnt/datasets/LibriSpeech/LibriSpeech",
              "part": "test-clean",
              "max_audio_length": 20.0,
              "max_text_length": 200
            },
            "module": "ss.datasets"
          },
          "snr_levels": 0,
          "max_length": 500,
          "max_speakers": 10,
          "reuse": true,
          "test": true,
          "limit": 100
        }
      }
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 1e-3
    }
  },
  "loss": {
    "type": "CompositeLoss",
    "args": {
      "lam": 0.5,
      "sdr_params": {},
      "ce_params": {}
    }
  },
  "metrics": [
    {
      "type": "AccuracyMetric",
      "args": {"name": "accuracy"}
    },
    {
      "type": "PESQMetric",
      "args": {"sr":  16000, "name": "pesq"}
    },
    {
      "type": "SISDRMetric",
      "args": {"name": "sdr"}
    },
    {
      "type": "CELossMetric",
      "args": {"name": "cross_entropy"}
    }
  ],
  "lr_scheduler": {
    "type": "ReduceLROnPlateau",
    "args": {
      "mode": "max",
      "factor": 0.5,
      "patience": 30
    }
  },
  "trainer": {
    "epochs": 1000,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "max val_sdr",
    "batch_accum": 6,
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "ss_project",
    "wandb_name": "5_restart_larger_bs",
    "len_epoch": 500,
    "log_step": 50,
    "grad_norm_clip": 100
  }
}
